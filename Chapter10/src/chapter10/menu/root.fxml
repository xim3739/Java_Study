<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="chapter10.menu.RootController">
   <children>
      <MenuBar prefHeight="29.0" prefWidth="400.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handlerNewFileAction" text="new File">
                     <accelerator>
                        <KeyCodeCombination alt="ANY" code="N" control="ANY" meta="ANY" shift="DOWN" shortcut="ANY" />
                     </accelerator>
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../bin/chapter10/menu/icon/new.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#handlerOpenFileAction" text="Open">
                     <accelerator>
                        <KeyCodeCombination alt="ANY" code="O" control="ANY" meta="ANY" shift="DOWN" shortcut="ANY" />
                     </accelerator>
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../bin/chapter10/menu/icon/open.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#handlerSaveFileAction" text="Save">
                     <accelerator>
                        <KeyCodeCombination alt="ANY" code="S" control="ANY" meta="ANY" shift="DOWN" shortcut="ANY" />
                     </accelerator>
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../bin/chapter10/menu/icon/save.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#handlerExitFileAction" text="Exit">
                     <accelerator>
                        <KeyCodeCombination alt="ANY" code="X" control="ANY" meta="ANY" shift="DOWN" shortcut="ANY" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ToolBar layoutY="29.0" prefHeight="40.0" prefWidth="400.0">
        <items>
          <Button fx:id="handlerNewFileAction" mnemonicParsing="false" onAction="#handlerNewFileAction">
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../bin/chapter10/menu/icon/new.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="handlerOpenFileAction" mnemonicParsing="false" onAction="#handlerOpenFileAction">
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../bin/chapter10/menu/icon/open.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="handlerSaveFileAction" mnemonicParsing="false" onAction="#handlerSaveFileAction">
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../bin/chapter10/menu/icon/save.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
        </items>
      </ToolBar>
      <TextArea fx:id="textArea" layoutX="14.0" layoutY="69.0" prefHeight="127.0" prefWidth="370.0" />
   </children>
</AnchorPane>
